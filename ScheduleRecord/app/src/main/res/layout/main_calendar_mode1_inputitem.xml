<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/inputItemLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical"
        android:background="@drawable/abaa_item_important1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute,UselessParent">

        <EditText
            android:id="@+id/inputItemEditText1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/abaa_item_edittext"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="XX:XX"
            android:editable="false"
            android:textColor="#000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/inputItemEditText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/abaa_item_edittext"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="点击写入日程"
            android:maxLines="3"
            android:paddingHorizontal="3dp"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/inputItemButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="9dp"
        android:background="@color/colorPrimary"
        android:text="T"
        app:layout_constraintBottom_toTopOf="@+id/inputItemLinearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/inputItemLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputItemLinearLayout1">

        <Spinner
            android:id="@+id/inputItemButton21"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/abaa_item_important2"
            android:textColor="@drawable/ac_my_button1_text"/>

        <TextView
            android:id="@+id/inputItemButton22"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="仅当天有效"
            android:gravity="center"
            android:background="@drawable/abaa_item_important4"
            android:textColor="@color/colorPrimary" />


        <Spinner
            android:id="@+id/inputItemButton24"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/abaa_item_important5"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>