<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/generalTextView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="可指派用户"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/generalEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:hint="点击写入用户ID"
            android:maxLines="1"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/generalButton1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:background="@drawable/abaa_item_im_em"
            android:textColor="@drawable/ac_my_button1_text"
            android:text="插入\n日程" />

        <Button
            android:id="@+id/generalButton2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:background="@drawable/abaa_item_im_em"
            android:textColor="@drawable/ac_my_button1_text"
            android:text="刷新" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ac_my_button1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/generalTextView3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00000000"
            android:drawableStart="@drawable/z_b"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="可指派用户"
            android:textColor="@drawable/ac_my_button1_text"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/generalTextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/diary"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>