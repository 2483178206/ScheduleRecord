            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/abaaaa_edit_week_choice"
            android:button="@null"
            android:gravity="center"
            android:textSize="12sp"
            android:text="星期四"
            android:textColor="@drawable/ac_my_button1_text" />

        <CheckBox
