            android:textColor="@drawable/ac_my_button1_text" />

        <CheckBox
            android:id="@+id/weekItemButton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/abaaaa_edit_week_choice"
            android:button="@null"
            android:gravity="center"
            android:textSize="12sp"
            android:text="星期六"
            android:textColor="@drawable/ac_my_button1_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editLinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editLinearLayout31">

        <TextView
            android:id="@+id/editTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
