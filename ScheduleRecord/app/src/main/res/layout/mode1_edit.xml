<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/editTextView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="编辑日程"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/editLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@drawable/abaa_item_im_em"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextView1">

        <CheckBox
            android:id="@+id/editCheckBox1"
            android:layout_width="30dp"
            android:layout_height="100dp"/>

        <EditText
            android:id="@+id/editEditText0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/abaa_item_edittext"
            android:gravity="center_vertical"
            android:text="XX:XX"
            android:editable="false"
            android:textColor="#000"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editEditText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/abaa_item_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editLinearLayout1">

        <TextView
            android:id="@+id/editTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:text="重要程度:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editButton21"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/abaa_item_im_em" />

            <Button
                android:id="@+id/editButton22"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/abaa_item_im_no" />

            <Button
                android:id="@+id/editButton23"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/abaa_item_no_em" />

            <Button
                android:id="@+id/editButton24"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/abaa_item_no_no" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editLinearLayout2">

        <TextView
            android:id="@+id/editTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="重复设置:" />

        <RadioGroup
            android:id="@+id/editRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/editRadio1"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/varygray2"
                android:background="@drawable/abaaa_edit_repat"
                android:gravity="center"
                android:text="每天" />

            <RadioButton
                android:id="@+id/editRadio2"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/abaaa_edit_repat"
                android:button="@null"
                android:gravity="center"
                android:text="每周"
                android:textColor="@color/varygray2" />

            <RadioButton
                android:id="@+id/editRadio3"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/abaaa_edit_repat"
                android:button="@null"
                android:gravity="center"
                android:text="每月1日"
                android:textColor="@color/varygray2" />

            <RadioButton
                android:id="@+id/editRadio4"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/abaaa_edit_repat"
                android:button="@null"
                android:gravity="center"
                android:text="不重复"
                android:textColor="@color/varygray2" />
        </RadioGroup>
    </LinearLayout>

