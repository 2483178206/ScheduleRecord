<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mode1ItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abaa_item_im_em"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute,UselessParent">

        <CheckBox
            android:id="@+id/mode1ItemCheckBox"
            android:layout_width="30dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/mode1ItemEditText1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/abaa_item_edittext"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mode1ItemEditText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="点击写入日程"
            android:textColor="#000"
            android:textSize="20sp"
            android:ellipsize="end"
            android:layout_margin="5dp"
            android:paddingHorizontal="3dp"
            android:background="@drawable/abaa_item_edittext"
            android:maxLines="3" />

    </LinearLayout>

</LinearLayout>