<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mode3LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ac_my_head"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="日"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="一"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="二"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="三"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="四"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="五"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/abc_calendar_datehead"
            android:text="六"
            android:textSize="15sp" />

    </LinearLayout>
    <!--静态加载fragment-->
    <fragment
        android:id="@+id/mode3CalendarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.schedule.record.app.fragment.Calendar3ViewFragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mode3Button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="当前月份日程完成比例图"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text" />

            <Button
                android:id="@+id/mode3Button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="当前月份日程完成数量折线图"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text" />

            <Button
                android:id="@+id/mode3Button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="当前月份被延时日程"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text" />

            <Button
                android:id="@+id/mode3Button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="当前月份未完成日程"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text" />

            <Button
                android:id="@+id/mode3Button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text"
                android:text="Button" />

            <Button
                android:id="@+id/mode3Button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text"
                android:text="Button" />

            <Button
                android:id="@+id/mode3Button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_calendar_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:textColor="@drawable/ac_my_button1_text"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>