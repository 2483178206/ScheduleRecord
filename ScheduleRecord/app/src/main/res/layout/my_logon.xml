<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ac_my_logon_button2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/logonTextView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/logonButton1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_margin="3dp"
            android:background="@drawable/ac_my_logon_button2"
            android:text="手机号登录"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/logonButton2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_margin="3dp"
            android:background="@drawable/ac_my_logon_button2"
            android:text="游客试用"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/logonButton3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_margin="3dp"
            android:background="@drawable/ac_my_logon_button1"
            android:text="注册"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/logonTextView1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="— 其它方式登录 —"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logonTextView1">

        <Button
            android:id="@+id/logonButton4"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/ac_my_logon_button3"
            android:text="X" />

        <Button
            android:id="@+id/logonButton5"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:background="@drawable/ac_my_logon_button3"
            android:gravity="center"
            android:text="X" />

        <Button
            android:id="@+id/logonButton6"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/ac_my_logon_button3"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="— 登录注册代表同意"/>

        <TextView
            android:id="@+id/logonTextView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/colorPrimary"
            android:text="用户协议"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="和"/>

        <TextView
            android:id="@+id/logonTextView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/colorPrimary"
            android:text="隐私政策"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text=" —"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>