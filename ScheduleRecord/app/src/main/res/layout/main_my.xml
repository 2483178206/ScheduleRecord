<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/myImageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#8BC34A"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/ac_my_scrollview"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:orientation="vertical">

            <Button
                android:id="@+id/myButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="个人信息"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="有效日程"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="结束日程"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="日程统计"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="习惯记录"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="播报设置"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="版本信息"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/myButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ac_my_button1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="待定"
                android:textColor="@drawable/ac_my_button1_text"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/myImageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>