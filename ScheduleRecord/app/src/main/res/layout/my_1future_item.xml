<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/effItemConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/abaa_item_important1"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/effItemCheckBox"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:clickable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/effItemEditText1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/abaa_item_edittext"
            android:editable="false"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/effItemEditText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/abaa_item_edittext"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="点击写入日程"
            android:maxLines="3"
            android:paddingHorizontal="3dp"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/effItemCheckBox"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>